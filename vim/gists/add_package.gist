# To add a new plugin
git submodule add <pluginrepo> pack/plugins/start/<pluginname>

# Replicate repo on a machine
git clone --recursive <myrepo>
ln -sf <myrepo> ~/.vim
ln -sf <myrepo>/vimrc ~/.vimrc

# Generate helptags for plugins
:helptags ALL

# To remove a plugin
git submodule deinit pack/plugins/start/<pluginname>

# To update a plugin
# inside plugin name folder
git pull origin master
